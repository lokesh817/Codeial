<link rel="stylesheet" href="/CSS/comment.css">
<p class="comment-container" id="comment-<%= comment._id %>">        
    <i class="fas fa-user"></i> <%= comment.user.name %> :- <small><%= comment.content %></small>
    <% if(locals.user && locals.user.id==comment.user.id) { %>
        <a class="delete-comment-button" href="/comment/destroy/<%= comment.id %>"><i class="fas fa-trash-alt"> </i></a>
        <% } %>
        <div class="like-button"> 
            <a class="toggle-like-button" data-likes="<%= comment.like.length%>" href="like/toggle/?id=<%=comment.id%>&type=comment">
                <i class=" fas fa-heart"></i><%= comment.like.length%>
            </a> 
        </div>
</p>