<link rel="stylesheet" href="CSS/home.css">

<h1>This is the <%= title %> profile page</h1>
<% if(user.id==profile_user.id){ %>
    <form action="/user/update/<%=profile_user.id%>" method="post">
        <input type="text" name="name" value="<%= profile_user.name %>" placeholder="Your Name" required>
        <input type="text" name="email" value="<%= profile_user.email %>" placeholder="Your Email" required>
        <input type="submit" value="Update">
    </form>
<% }else { %>
    <p>Hi <%= profile_user.name %>,</p>
    <p>Your email id  associated with this profile is <%= profile_user.email %></p>
<% } %>

