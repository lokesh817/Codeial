<link rel="stylesheet" href="CSS/home.css">
<div id="feed-post">
    <aside id="Groups">

    </aside>
    <article>
        <% if(locals.user) { %>
            <h4>Posts</h4>
            <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" cols="70" rows="3" placeholder="what's in your mind?.." required></textarea>
                <input type="submit" value="Post">
            </form>
            <ul id="post-list">
                    <% for(post of locals.posts){ %>
                        <li id="post-<%= post._id %>">
                            <%- include('_post')%>
                        </li>
                        <% } %>
                
            </ul>
            <% } %>
    </article>
    <aside id="friend-side">
        <%- include('_friends')%>
    </aside>
    
</div>
<script src="/JS/home_postComment.js"></script>
<script src="/JS/home_post.js"></script>